{
  "name": "smart-perp-server",
  "version": "0.1.0",
  "description": "Smart Perp Radar API Server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "tsx watch src/worker/index.ts",
    "worker:once": "tsx src/worker/index.ts --once",
    "worker:dump-radar": "tsx watch src/worker/dumpRadarRunner.ts",
    "worker:dump-radar:once": "tsx src/worker/dumpRadarRunner.ts --once",
    "worker:dump-radar:solana": "tsx watch src/worker/dumpRadarRunner.ts --solana",
    "worker:dump-radar:solana:once": "tsx src/worker/dumpRadarRunner.ts --solana --once",
    "worker:dump-radar:all": "tsx watch src/worker/dumpRadarRunner.ts --all",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.13.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
